@model MS3GUI.Models.ActivityViewModel

<h2>Add New Activity</h2>

<form asp-action="AddActivity" method="post">
    <div>
        <label for="courseId">Select Course</label>
        <select asp-for="CourseId" asp-items="Model.CoursesList" class="form-control">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div>
        <label for="moduleId">Select Module</label>
        <select asp-for="ModuleId" asp-items="Model.ModulesList" class="form-control">
            <option value="">-- Select Module --</option>
        </select>
        <span asp-validation-for="ModuleId" class="text-danger"></span>
    </div>

    <div>
        <label for="activityType">Activity Type</label>
        <select asp-for="ActivityType" class="form-control">
            <option value="Quiz">Quiz</option>
            <option value="Assignment">Assignment</option>
            <option value="Discussion">Discussion</option>
        </select>
        <span asp-validation-for="ActivityType" class="text-danger"></span>
    </div>

    <div>
        <label for="instructionDetails">Instruction Details</label>
        <textarea asp-for="InstructionDetails" class="form-control"></textarea>
        <span asp-validation-for="InstructionDetails" class="text-danger"></span>
    </div>

    <div>
        <label for="maxPoints">Max Points</label>
        <input type="number" asp-for="MaxPoints" class="form-control" min="1" required />
        <span asp-validation-for="MaxPoints" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Add Activity</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
