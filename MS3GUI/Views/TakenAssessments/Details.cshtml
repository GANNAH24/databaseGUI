<!DOCTYPE html>

@model IEnumerable<MS3GUI.Models.TakenAssessment>

<h2>Details for Taken Assessments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Learner Name</th>
            <th>Assessment Title</th>
            <th>Score</th>
            <th>Assessment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Learner.FirstName @item.Learner.LastName</td>
                <td>@item.Assessment.Title</td>
                <td>@item.Score</td>
                @* <td>@item.Assessment.Date</td> <!-- If date is part of the Assessment model -->*@
            </tr>
        }
    </tbody>
</table>


</html>
