@model MS3GUI.Models.TakenAssessment

<h1>Details</h1>

<div>
    <h4>Taken Assessment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Assessment</dt>
        <dd class="col-sm-10">@Model.AssessmentId</dd>
        <dt class="col-sm-2">Learner</dt>
        <dd class="col-sm-10">@Model.LearnerId</dd>
        <dt class="col-sm-2">Score</dt>
        <dd class="col-sm-10">@Model.Score</dd>
        <dt class="col-sm-2">Completion Date</dt>
        <dt class="col-sm-2">Score Breakdown</dt>
        <dd class="col-sm-10">
            <ul>
                <li>Section 1: @Model.Score</li>
                <li>Section 2: @Model.Score</li>
                <!-- Add more sections as needed -->
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AssessmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


