<!DOCTYPE html>

@model MS3GUI.Models.TakenAssessment

@{
    ViewData["Title"] = "Delete Taken Assessment";
}

<h1>Delete Taken Assessment</h1>

<h4>Are you sure you want to delete this Taken Assessment?</h4>
<hr />

<div>
    <h5>Score: @Model.Score</h5>
    <p>Learner: @Model.Learner.FirstName @Model.Learner.LastName</p>
    <p>Assessment: @Model.Assessment.Title</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.AssessmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
</html>

