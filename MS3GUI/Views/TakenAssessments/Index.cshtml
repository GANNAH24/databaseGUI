@model IEnumerable<MS3GUI.Models.TakenAssessment>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AssessmentId)</th>
            <th>@Html.DisplayNameFor(model => model.LearnerId)</th>
            <th>@Html.DisplayNameFor(model => model.Score)</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AssessmentId)</td>
                <td>@Html.DisplayFor(modelItem => item.LearnerId)</td>
                <td>@Html.DisplayFor(modelItem => item.Score)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssessmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AssessmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AssessmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
