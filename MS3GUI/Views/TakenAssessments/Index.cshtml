<!DOCTYPE html>

@model IEnumerable<MS3GUI.Models.TakenAssessment>

<h2>Your Assessments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Assessment Title</th>
            <th>Score</th>
            <th>View Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Assessment.Title</td>
                <td>@item.Score</td>
                <td>
                    <a href="@Url.Action("Details", "TakenAssessments", new { id = item.AssessmentId })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</html>

