@model MS3GUI.Models.NotifyStudentsViewModel

@{
    ViewData["Title"] = "Notify Students";
}

<h2>Notify Students</h2>

<form asp-action="NotifyStudents" method="post">
    <div class="form-group">
        <label asp-for="Message" class="control-label">Message</label>
        <input asp-for="Message" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UrgencyLevel" class="control-label">Urgency Level</label>
        <input asp-for="UrgencyLevel" class="form-control" />
    </div>
    <input type="hidden" asp-for="AssessmentId" />
    <div class="form-group">
        <input type="submit" value="Send Notification" class="btn btn-primary" />
    </div>
</form>
