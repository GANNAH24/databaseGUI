@model IEnumerable<MS3GUI.Models.Assessment>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Atype)</th>
            <th>@Html.DisplayNameFor(model => model.TotalMarks)</th>
            <th>@Html.DisplayNameFor(model => model.PassingMarks)</th>
            <th>@Html.DisplayNameFor(model => model.Criteria)</th>
            <th>@Html.DisplayNameFor(model => model.Weightage)</th>
            <th>@Html.DisplayNameFor(model => model.Adescription)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Module)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Atype)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalMarks)</td>
                <td>@Html.DisplayFor(modelItem => item.PassingMarks)</td>
                <td>@Html.DisplayFor(modelItem => item.Criteria)</td>
                <td>@Html.DisplayFor(modelItem => item.Weightage)</td>
                <td>@Html.DisplayFor(modelItem => item.Adescription)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    @if (item.Module != null)
                    {
                        @Html.DisplayFor(modelItem => item.Module.Title)
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
