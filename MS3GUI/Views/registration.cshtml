@{
    ViewData["Title"] = "Registration";
}

<h2>Choose Your Role</h2>

<!-- Buttons to select role -->
<button id="btnLearner" onclick="showForm('learner')">Register as Learner</button>
<button id="btnInstructor" onclick="showForm('instructor')">Register as Instructor</button>

<div id="learnerForm" style="display:none;">
    <h3>Register as Learner</h3>
    <form asp-action="Submit" method="post">
        <input type="hidden" name="role" value="learner" />
        <label>First Name</label>
        <input type="text" name="firstName" required />

        <label>Last Name</label>
        <input type="text" name="lastName" required />

        <label>Gender</label>
        <input type="text" name="gender" required />

        <label>Birth Date</label>
        <input type="date" name="birthDate" required />

        <label>Country</label>
        <input type="text" name="country" required />

        <label>Cultural Background</label>
        <input type="text" name="culturalBackground" required />

        <button type="submit">Submit</button>
    </form>
</div>

<div id="instructorForm" style="display:none;">
    <h3>Register as Instructor</h3>
    <form asp-action="Submit" method="post">
        <input type="hidden" name="role" value="instructor" />
        <label>Instructor Name</label>
        <input type="text" name="firstName" required />

        <label>Qualification</label>
        <input type="text" name="qualification" required />

        <label>Expertise Area</label>
        <input type="text" name="expertise" required />

        <label>Email</label>
        <input type="email" name="email" required />

        <button type="submit">Submit</button>
    </form>
</div>

<script>
    function showForm(role) {
        if (role === 'learner') {
            document.getElementById('learnerForm').style.display = 'block';
            document.getElementById('instructorForm').style.display = 'none';
        } else if (role === 'instructor') {
            document.getElementById('learnerForm').style.display = 'none';
            document.getElementById('instructorForm').style.display = 'block';
        }
    }
</script>
