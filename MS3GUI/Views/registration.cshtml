@{
    ViewData["Title"] = "User Registration";
}

<h2>User Registration</h2>

<form method="post" asp-action="RegisterUser">
    <label for="role">Select your role:</label>
    <select id="role" name="role" onchange="showForm(this.value)">
        <option value="">--Select Role--</option>
        <option value="Learner">Learner</option>
        <option value="Instructor">Instructor</option>
    </select>

    <div id="learnerForm" style="display:none;">
        <h3>Learner Registration</h3>
        <label>First Name:</label>
        <input type="text" name="firstName" required /><br />
        <label>Last Name:</label>
        <input type="text" name="lastName" required /><br />
        <label>Gender:</label>
        <input type="text" name="gender" required /><br />
        <label>Birth Date:</label>
        <input type="date" name="birthDate" required /><br />
        <label>Country:</label>
        <input type="text" name="country" required /><br />
        <label>Cultural Background:</label>
        <input type="text" name="culturalBackground" required /><br />
    </div>

    <div id="instructorForm" style="display:none;">
        <h3>Instructor Registration</h3>
        <label>Instructor Name:</label>
        <input type="text" name="instructorName" required /><br />
        <label>Latest Qualification:</label>
        <input type="text" name="qualification" required /><br />
        <label>Expertise Area:</label>
        <input type="text" name="expertiseArea" required /><br />
        <label>Email:</label>
        <input type="email" name="email" required /><br />
    </div>

    <button type="submit">Register</button>
</form>

<script>
    function showForm(role) {
        document.getElementById('learnerForm').style.display = (role === 'Learner') ? 'block' : 'none';
        document.getElementById('instructorForm').style.display = (role === 'Instructor') ? 'block' : 'none';
    }
</script>

