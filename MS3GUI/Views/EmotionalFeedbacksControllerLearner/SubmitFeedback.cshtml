@model MS3GUI.Models.EmotionalFeedbackViewModel

@{
    ViewData["Title"] = "Submit Emotional Feedback";
    Layout = "_Layout"; // Ensure the layout is correctly set
}

<h2>Submit Emotional Feedback</h2>

<form asp-action="SubmitFeedback" method="post">
    <div class="form-group">
        <label asp-for="ActivityId" class="control-label"></label>
        <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
    </div>
    <div class="form-group">
        <label asp-for="LearnerId" class="control-label"></label>
        <select asp-for="LearnerId" class="form-control" asp-items="ViewBag.LearnerId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Timestamp" class="control-label"></label>
        <input asp-for="Timestamp" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmotionalState" class="control-label"></label>
        <input asp-for="EmotionalState" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
























