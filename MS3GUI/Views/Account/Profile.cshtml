@{
    ViewData["Title"] = "Profile";
    var email = ViewData["Email"] as string;
    var instructors = ViewData["Instructors"] as IEnumerable<dynamic>;
}

<h2>User Profile</h2>

<p><strong>Email:</strong> @email</p>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["StatusMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (instructors != null && instructors.Any())
{
    <h3>Manage Instructors</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Instructor Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var instructor in instructors)
            {
                <tr>
                    <td>@instructor.InstructorName</td>
                    <td>@instructor.Email</td>
                    <td>
                        <form asp-action="DeleteInstructor" method="post" onsubmit="return confirm('Are you sure you want to delete this instructor?');">
                            <input type="hidden" name="instructorId" value="@instructor.InstructorId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No instructors found.</p>
}
