@model MS3GUI.Models.DiscussionForum

@{
    ViewData["Title"] = "Create Discussion Forum";
}

<h2>Create Discussion Forum</h2>

<form asp-action="CreateDiscussionForum" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastActive"></label>
        <input asp-for="LastActive" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ModuleId"></label>
        <input asp-for="ModuleId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CourseId"></label>
        <input asp-for="CourseId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
